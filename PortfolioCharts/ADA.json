{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "description": "Pollution data using satellite imagary from emissions API. The chart makes two separate API calls, one to get the UK data, and one to get the data for a specific point, in this case the coordinates for the city of Bristol.",

    "title": {
    "text": "Price of Cardano",
    "anchor": "start",
    "color": "black"
  },

    "width":500,
    "height":500,

    "encoding": {

      "x": {
        "field": "time_open",
        "type": "temporal",
        "title": null
        },

      "y": {
        "field": "price_close",
        "type": "quantitative",
        "title": null
        }
    },



    "data": {"url": "https://raw.githubusercontent.com/StanWaldron/StanWaldron.github.io/main/Data/data-BTC.json"},

    "mark":{
      "type": "line",
      "color":"hotpink",
      "opacity": 1,
      "strokeWidth": 3
    }
  }
